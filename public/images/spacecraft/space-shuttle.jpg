<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="shuttleGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1"/>
      <stop offset="30%" style="stop-color:#f0f0f0;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#e0e0e0;stop-opacity:1"/>
    </linearGradient>
    <radialGradient id="flameGradient" cx="50%" cy="100%" r="80%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1"/>
      <stop offset="30%" style="stop-color:#ffff00;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#ff6600;stop-opacity:1"/>
    </radialGradient>
  </defs>

  <!-- Background - Space -->
  <rect width="400" height="300" fill="#0a0a1a"/>

  <!-- Space Shuttle -->
  <path d="M 120 150 L 280 150 L 300 170 L 320 200 L 300 230 L 280 250 L 120 250 Z" fill="url(#shuttleGradient)" stroke="#cccccc" stroke-width="2"/>
  <path d="M 120 150 L 280 150 L 300 170 L 320 200 L 300 230 L 280 250 L 120 250 Z" fill="none" stroke="#aaaaaa" stroke-width="1" opacity="0.5"/>

  <!-- Shuttle nose -->
  <path d="M 280 150 L 320 200 L 280 250 Z" fill="#ffffff" stroke="#cccccc" stroke-width="1"/>
  <path d="M 280 150 L 320 200 L 280 250 Z" fill="none" stroke="#aaaaaa" stroke-width="1" opacity="0.5"/>

  <!-- Wings -->
  <path d="M 180 200 L 150 220 L 160 240 L 200 230 Z" fill="#e8e8e8" stroke="#cccccc" stroke-width="1"/>
  <path d="M 220 200 L 250 220 L 240 240 L 200 230 Z" fill="#e8e8e8" stroke="#cccccc" stroke-width="1"/>

  <!-- Cockpit windows -->
  <rect x="290" y="185" width="15" height="30" rx="5" fill="#000033" opacity="0.8"/>
  <rect x="290" y="185" width="15" height="30" rx="5" fill="none" stroke="#cccccc" stroke-width="1" opacity="0.3"/>

  <!-- External tank -->
  <rect x="80" y="160" width="40" height="80" rx="5" fill="#e0e0e0" stroke="#cccccc" stroke-width="1"/>
  <rect x="80" y="160" width="40" height="80" rx="5" fill="none" stroke="#aaaaaa" stroke-width="1" opacity="0.5"/>

  <!-- Solid rocket boosters -->
  <rect x="60" y="140" width="20" height="120" rx="3" fill="#cccccc" stroke="#aaaaaa" stroke-width="1"/>
  <rect x="60" y="140" width="20" height="120" rx="3" fill="none" stroke="#888888" stroke-width="1" opacity="0.5"/>
  <rect x="320" y="140" width="20" height="120" rx="3" fill="#cccccc" stroke="#aaaaaa" stroke-width="1"/>
  <rect x="320" y="140" width="20" height="120" rx="3" fill="none" stroke="#888888" stroke-width="1" opacity="0.5"/>

  <!-- Engine exhaust -->
  <ellipse cx="120" cy="280" rx="15" ry="8" fill="url(#flameGradient)" opacity="0.8"/>
  <ellipse cx="120" cy="275" rx="10" ry="5" fill="#ffaa00" opacity="0.6"/>
  <ellipse cx="120" cy="270" rx="5" ry="3" fill="#ffffff" opacity="0.9"/>

  <!-- NASA logo -->
  <circle cx="200" cy="200" r="15" fill="#ffffff"/>
  <circle cx="200" cy="200" r="12" fill="#000033"/>
  <text x="200" y="205" text-anchor="middle" fill="#ffffff" font-family="Arial, sans-serif" font-size="10" font-weight="bold">NASA</text>

  <!-- Name Badge -->
  <rect x="150" y="20" width="100" height="25" rx="5" fill="#ffffff" opacity="0.9"/>
  <text x="200" y="35" text-anchor="middle" fill="#000033" font-family="Arial, sans-serif" font-size="14" font-weight="bold">Space Shuttle</text>

  <!-- Stars -->
  <circle cx="50" cy="50" r="1" fill="#ffffff" opacity="0.8"/>
  <circle cx="350" cy="70" r="1.5" fill="#ffffff" opacity="0.6"/>
  <circle cx="100" cy="100" r="1" fill="#ffffff" opacity="0.7"/>
  <circle cx="300" cy="150" r="1.2" fill="#ffffff" opacity="0.5"/>
  <circle cx="250" cy="200" r="1" fill="#ffffff" opacity="0.6"/>
</svg>
